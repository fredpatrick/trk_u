#
# gmake variables common to all trk_u Makefile's
#

.SUFFIXES: .exe

#PRJDIR   = /home/fredpatrick/wrk/trk_u
PRJDIR    = $(HOME)/wrk/trk_u
TRK_U_DIR  = $(PRJDIR)

TRK_U_LIB_DIR    = $(TRK_U_DIR)/lib
ALL_LIB_DIRS   = $(TRK_U_LIB_DIR)

TRK_U_VERSION     = $(shell tr b \. < $(TRK_U_DIR)/VERSION)

CXX             = c++ 
CXXFLAGS        = -fPIC -fexceptions -O -ftemplate-depth-40 -pthread
INCFLAGS        = -I.  -I$(TRK_U_DIR)/include
LIBFLAGS        = -shared -fPIC

CPPFLAGS        =
CPP             = cpp -D__GNUC__

SHELL           = /bin/sh 
AR              = ar
ARFLAGS         = rc 
RANLIB          = ranlib
RM              = rm -f
LN              = ln -f -s 
IDIRCMD         = $(TRK_U_DIR)/admin/mkinstalldirs
MAKE_DEPS       = $(TRK_U_DIR)/admin/DotHDeps
CONFLIBS        = -ldl -lm -lpthread

LDLIBS          = -L$(TRK_U_LIB_DIR) -ltrk$(TRK_U_VERSION) \
                  $(CONFLIBS)

